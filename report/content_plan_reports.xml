<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_euro_lowmargin" model="report.paperformat">
        <field name="name">European A4 low margin</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="True"/>
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>


    <record id="report_content_plan" model="ir.actions.report">
        <field name="name">Full Content Plan</field>
        <field name="model">content.plan</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">content_plan.report_content_plan_template</field>
        <field name="report_file">content_plan.report_content_plan_template</field>
        <field name="paperformat_id" ref="paperformat_euro_lowmargin"/>
        <field name="binding_model_id" ref="model_content_plan"/>
        <field name="binding_type">report</field>
    </record>



</odoo>